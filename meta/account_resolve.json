{
  "description": "Resolve a bank account to get the holder's fullname.",
  "endpoint": "POST /v3/accounts/resolve",
  "request_spec": {
    "type":"post_body",
    "spec": {
      "account_number": "Account number to be resolved",
      "account_bank": "Bank code ",
      "public_key": "Merchant public key. Retrievable from the Flutterwave dashboard"
    }
  },
  "sample_request": {
    "account_number": "0690000032",
    "account_bank": "044",
    "public_key": "FLWPUBK-58f1a13c87594d60edc91affff3a7645-X"
  },
  "sample_response": {
    "status": "success",
    "message": "Account details fetched",
    "data": {
      "account_number": "0690000032",
      "account_name": "SHERIFAT BOLANLE IYANDA"
    }
  }
}
