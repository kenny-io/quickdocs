{
  "description": "Update details tied to a customer card token",
  "endpoint": "PUT /tokens/:token",
  "headers": {
    "Authorization": "Bearer {Secret Key}",
    "Content-Type": "application/json"
  },
  "request_spec": {
    "type": ["params", "put_body"],
    "spec": [
      {
        "token": "Required: This is the embed token returned after charging the customer, it can be retrieved from the response returned by the Verify transaction endpoint/service"
      },
      {
        "email": "Required: The new email you would like to attach to the token.",
        "first_name": "Required: The customer's first name.",
        "last_name": "Required: The customer's last name.",
        "phone_number": "Required: The customer's phone number"
      }
    ]
  },
  "sample_request": {
    "token": "flw-t1nf-f9b3bf384cd30d6fca42b6df9d27bd2f-xxxx",
    "email": "user@example.com",
    "first_name": "Kendrick",
    "last_name": "Aubrey",
    "phone_number": "0813XXXXXXX"
  },
  "sample_response": {
    "status": "success",
    "message": "Token details updated",
    "data": {
      "email": "user@example.com",
      "fullname": "Kendrick Aubrey",
      "phone_number": "0813XXXXXXX",
      "created_at": "2020-01-15T13:26:24.000Z"
    }
  }
}
